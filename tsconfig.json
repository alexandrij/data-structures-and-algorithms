{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./out-tsc",
    "importHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "lib": [
      "esnext"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.spec.ts"
  ]
}
